<!-- below tells the form where to go after submission -->
<% action_url = (action == :new) ? new_cat_url : edit_cat_url(cat) %>

<!--  -->

<form action="<%= action_url %>" method="post">
 <% if action == :edit %>
   <input type="hidden" name="_method" value="patch">
 <% end %>
 <!-- inputs go here... -->
</form>
<!-- below is same as above -->
<!-- <form action="<%= cats_url %>" method="post"> -->
  <h1>Enter the information for your cat!</h1>

  <label for="name">Name</label>
  <input id="name" type="text" name="cats[name]" value="<%= cat.name %>">
  <br>

  <label for="sex">Sex</label>
  <input id="sex" type="radio" name="cats[sex]" value="M" <%= "checked" if cat.sex == "M" %> > Male
  <input id="sex" type="radio" name="cats[sex]" value="F" <%= "checked" if cat.sex == "F" %> > Female
  <br>

  <label for="birth_date">Birth Date</label>
  <input id="birth_date" type="date" name="cats[birth_date]" value="<%= cat.birth_date %>">
  <br>

  <label for="color">Color</label>
  <select name="cats[color]">
    <% colors = %w(grey black yellow red blue green) %>
    <% colors.each do |color| %>
      <!-- <option value="grey" selected>Grey</option> -->

      <option value="<%= color %>" <%= 'selected' if cat.color == color %> > <%= color.capitalize %> </option>
    <% end %>
  </select>
  <br>
  <label for="description">description</label>
  <textarea name="cats[description]" rows="8" cols="80"><%= cat.description %></textarea>
  <br>
  <input type="submit">
</form>
